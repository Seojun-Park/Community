type User {
  id: ID! @id
  avatar: String @default(value: "https://i.pinimg.com/originals/2c/1d/13/2c1d13d7fa21db9ae2adfa245d778e1f.jpg")
  email: String! @unique
  firstName: String
  lastName: String
  username: String! @unique
  intro: String
  posts: [Post!]! @relation(name:"PostsOfUser", onDelete: CASCADE)
  loginSecret: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Post {
  id: ID! @id
  title: String!
  caption: String!
  user: User! @relation(name:"PostsOfUser")
  notice: [Notice!]
  markget: [Market!]
  board: [Board!]
  immo: [Immobiler!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Notice {
  id: ID! @id
  user: User!
  title: String!
  caption: String!
  comments: [Comment!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Market {
  id: ID! @id
  user: User!
  title: String!
  caption: String!
  comments: [Comment!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Immobiler {
  id: ID! @id
  user: User!
  title: String!
  caption: String!
  comments: [Comment!]
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Board {
  id: ID! @id
  user: User!
  title: String!
  caption: String!
  comments: [Comment!]! @relation(name:"CommentOfBoard", onDelete: CASCADE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Image{
  id: ID! @id
  url: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  board: Board @relation(name:"CommentOfBoard")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
