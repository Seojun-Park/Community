type User {
  id: ID! @id
  avatar: String @default(value: "https://i.pinimg.com/originals/2c/1d/13/2c1d13d7fa21db9ae2adfa245d778e1f.jpg")
  email: String! @unique
  firstName: String
  lastName: String
  username: String! @unique
  intro: String
  posts: [Post!]! @relation(name:"PostsOfUser", onDelete: CASCADE)
  loginSecret: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Post {
  id: ID! @id
  title: String!
  caption: String!
  comments: [Comment!]!
  images: [Image!]! @relation(name: "ImagesOfPost", onDelete: CASCADE)
  user: User! @relation(name:"PostsOfUser")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Notice {
  id: ID! @id
  title: String!
  caption: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt 
}

type Image{
  id: ID! @id
  url: String!
  post: Post! @relation(name: "ImageOfPost")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  post: Post!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
